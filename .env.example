# kelsoko Production Environment Configuration
# Copy this file to .env for local development
# In production, set these values through your deployment platform

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://kelsoko.org

# Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRY=24h
BCRYPT_SALT_ROUNDS=10

# Feature Flags
USE_MOCK_DB=false
ENABLE_OFFLINE_MODE=true

# Security
CORS_ORIGINS=https://kelsoko.org
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Media Storage
MEDIA_STORAGE_TYPE=s3 # or 'local'
S3_BUCKET_NAME=your-media-bucket
S3_BUCKET_REGION=us-east-1

# Performance & Caching
CACHE_TTL=3600 # in seconds
ENABLE_REDIS_CACHE=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error # 'debug', 'info', 'warn', 'error'
