# WebTrader Production Environment Configuration
# Copy this file to .env for local development
# In production, set these values through your deployment platform

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://kelsoko.org

# Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRY=24h
BCRYPT_SALT_ROUNDS=10

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=webtrader
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_TLS=false

# Feature Flags
USE_MOCK_DB=false

# Security
CORS_ORIGINS=https://kelsoko.org
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Media Storage
MEDIA_STORAGE_TYPE=s3 # or 'local'
S3_BUCKET_NAME=your-media-bucket
S3_BUCKET_REGION=us-east-1

# Performance & Caching
CACHE_TTL=3600 # in seconds
ENABLE_REDIS_CACHE=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error # 'debug', 'info', 'warn', 'error'
