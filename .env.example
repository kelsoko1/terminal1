# WebTrader Environment Configuration Example
# Copy this file to .env for local development
# In production, set these values through your deployment platform

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRY=24h
BCRYPT_SALT_ROUNDS=10

# Database Configuration
POSTGRES_USER=webtrader
POSTGRES_PASSWORD=webtrader_secret
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=webtrader
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Feature Flags
USE_MOCK_DB=true

# Security
CORS_ORIGINS=http://localhost:3000,https://webtrader.example.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
